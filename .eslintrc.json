{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier", "jest"],
  "env": {
    "jest": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "quotes": [2, "single"],
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ]
  }
}
